@using OnlineClassRegister.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<OnlineClassRegisterUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Srubil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/OnlineClassRegister.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
                <img src="~/images/icon.png" alt="Navbar Icon" width="50" height="50" />
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Srubil</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Parent"))
                    {
                        <li class="nav-item">
                            <div class="nav-link-container d-flex flex-column align-items-center">
                                    <img src="~/images/messagesIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                                <a class="nav-link text-dark" asp-area="" asp-controller="TeacherMessages" asp-action="Index">Messages</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link-container d-flex flex-column align-items-center">
                                    <img src="~/images/annIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                                <a class="nav-link text-dark" asp-area="" asp-controller="Announcements" asp-action="AnnouncementsList">Announcements</a>
                                </div>
                        </li>
                    }
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Teacher"))
                    {
                        <li class="nav-item">
                            <div class="nav-link-container d-flex flex-column align-items-center">
                                <img src="~/images/registerIcon.png" alt="Navbar Icon" width="20" height="20" />
                                <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="IndexTeacher">Register</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link-container d-flex flex-column align-items-center">
                                    <img src="~/images/messagesIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                                <a class="nav-link text-dark" asp-area="" asp-controller="TeacherMessages" asp-action="Index">Messages</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link-container d-flex flex-column align-items-center">
                                    <img src="~/images/annIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                                <a class="nav-link text-dark" asp-area="" asp-controller="Announcements" asp-action="AnnouncementsList">Announcements</a>
                            </div>
                            </li>
                    }
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Student"))
                    {
                        <li class="nav-item">
                            <div class="nav-link-container d-flex flex-column align-items-center">
                                    <img src="~/images/registerIcon.png" alt="Navbar Icon" width="20" height="20" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
                            </div>
                        </li>
                    }
                    <li class="nav-item">
                        <div class="nav-link-container d-flex flex-column align-items-center">
                            <img src="~/images/listIcon.png" alt="Navbar Icon" width="20" height="20" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link-container d-flex flex-column align-items-center">
                            <img src="~/images/listIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="Subjects" asp-action="Index">Subjects</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link-container d-flex flex-column align-items-center">
                            <img src="~/images/listIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="StudentClasses" asp-action="Index">Classes</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link-container d-flex flex-column align-items-center">
                            <img src="~/images/listIcon.PNG" alt="Navbar Icon" width="20" height="20" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                        </div>
                    </li>
                </ul>
            </div>
            <partial name="_LoginPartial"/>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - Srubil - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>