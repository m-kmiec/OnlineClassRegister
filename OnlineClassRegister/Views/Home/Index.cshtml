@{
    ViewData["Title"] = "Home Page";
}
<style>
    .big-row {
        width: 100%;
        display: block;
    }
    .small-article-container {
        display: inline-block; 
        width: 33.33%;
    }
    .main-container .row {
        display: flex;
        justify-content: space-between;
        margin: 0;
        width: 100%;
    }
    .row {
        display: flex;
        flex-wrap: wrap;
        margin-left: -15px;
        margin-right: -15px;
    }

    .article-title {
        text-align: center;
        font-weight: bold;
    }

</style>
<div>
    <h1 class="display-4 text-center">Welcome to Srubil!</h1>
    <article>
        <div class="main-container">
            <div class="big-row">
                <picture>
