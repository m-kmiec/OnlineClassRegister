@model OnlineClassRegister.Models.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="value" class="control-label"></label>
                <select asp-for="value" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                </select>
                <span asp-validation-for="value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="semesterNumber" class="control-label"></label>
                <select asp-for="semesterNumber" class="form-control">
                    <option>1</option>
                    <option>2</option>
                </select>
                <span asp-validation-for="semesterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="studentId" class="control-label">Student</label>
                <select asp-for="studentId" class="form-control" asp-items="ViewBag.students"></select>
                <span asp-validation-for="studentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top:10px"  />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="IndexTeacher">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }